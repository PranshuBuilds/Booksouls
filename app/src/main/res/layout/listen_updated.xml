<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    android:layout_marginStart="15dp">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:id="@+id/card"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">
        <ImageView
            android:layout_width="140dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"

            android:layout_alignParentTop="true"
            android:id="@+id/updatedImage"/>
        <ImageView
            android:layout_width="140dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/gradient_trantoblack"/>
    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/fav_updated"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:gravity="center"
        android:paddingLeft="1dp"
        android:textStyle="bold"
        android:elevation="11dp"
        android:rotation="0"
        android:scaleType="centerInside"
        android:text="&#8942;"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="8dp"
        android:textColor="#000"

        android:fontFamily="@font/opensans_regular"
        android:textSize="16dp"
        android:text="@string/tab_quicks"
        android:id="@+id/updatedTitle"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginTop="5dp"

        android:textColor="#000"
        android:fontFamily="@font/opensans_regular"
        android:textSize="13dp"
        android:ellipsize="end"
        android:layout_below="@id/updatedTitle"
        android:text="@string/tab_quicks"
        android:id="@+id/updatedDisc"/>


</RelativeLayout>