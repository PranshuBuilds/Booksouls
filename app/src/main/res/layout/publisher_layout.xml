<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardCornerRadius="4dp"
    android:id="@+id/pubrelative"
    android:layout_height="130dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"

    android:layout_marginTop="15dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pub_Topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:fontFamily="@font/playfairdisplay_medium"
                android:maxLines="2"
                android:paddingRight="5dp"
                android:text="Random text for sampling and re directional purposeis used"
                android:textColor="#000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/pub_discription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/pub_progress"

                android:layout_below="@id/pub_Topic"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="0dp"
                android:ellipsize="end"
                android:fontFamily="@font/opensans_italic"
                android:maxLines="1"
                android:paddingRight="5dp"
                android:text="Random text for sampling and re directional purposeis used"
                android:textColor="#000"
                android:textSize="12dp" />


            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/pub_progress"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="0dp"
                app:cpb_background_progressbar_color="#DADADA"
                app:cpb_background_progressbar_width="4dp"
                app:cpb_progress="75"
                app:cpb_progress_direction="to_right"
                app:cpb_progressbar_color="@color/COMPANYCOLOR"
                app:cpb_progressbar_width="4dp"
                app:cpb_round_border="false" />

            <TextView
                android:id="@+id/fav_pub"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:gravity="top"
                android:paddingLeft="15dp"

                android:rotation="90"
                android:scaleType="centerInside"
                android:text="&#8942;"
                android:textColor="#707070"
                android:textSize="32dp" />


        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:elevation="10dp"
            android:layout_gravity="center"
            card_view:cardElevation="10dp"
            app:cardCornerRadius="0dp">
            <ImageView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/pub_image"/>
        </androidx.cardview.widget.CardView>




    </LinearLayout>
</RelativeLayout>